@model IEnumerable<Gestion_Dette_Web_Csharp.Models.Etudiant>

@{
    ViewData["Title"] = "Liste des Étudiants";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Matricule</th>
            <th>Nom Complet</th>
            <th>Adresse</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var etudiant in Model)
        {
            <tr>
                <td>@etudiant.Matricule</td>
                <td>@etudiant.NomComplet</td>
                <td>@etudiant.Adresse</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = etudiant.Id })">Edit</a> |
                    <a href="@Url.Action("Delete", new { id = etudiant.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create")" class="btn btn-primary">Créer un étudiant</a>
